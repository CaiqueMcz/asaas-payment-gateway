{
  "name": "caiquemcz/asaas-payment-gateway",
  "description": "SDK for Asaas Payment integration",
  "type": "library",
  "require": {
    "php": ">=7.4",
    "guzzlehttp/guzzle": "^7.9",
    "myclabs/php-enum": "^1.8",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.11",
    "phpstan/phpstan": "^2.1",
    "fakerphp/faker": "^1.24"
  },
  "autoload": {
    "files": [
      "src/Helpers/Global.php"
    ],
    "psr-4": {
      "AsaasPaymentGateway\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AsaasPaymentGateway\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs",
    "stan": "phpstan analyse src tests"
  },
  "license": "MIT"
}
